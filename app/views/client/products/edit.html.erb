

<div class="row">
  <div class="col-md-8 offset-md-2">
    <center><h1 style="color: white;">Edit Product</h1></center>
    <%= form_tag "/client/products/#{@product['id']}", method: :patch do %>
      <form>
      <div class="form-group" style="color: white;">
        <label for="productName">Name</label>
        <input type="text" class="form-control" id="productName" aria-describedby="productName" value="<%= @product['name'] %>">
      </div>
      <div class="form-group" style="color: white;">
        <label for="productPrice">Price</label>
        <input type="number" class="form-control" id="productPrice" aria-describedby="productName" value="<%= @product['price'] %>">
      </div>
      <div class="form-group" style="color: white;">
        <label for="productQuantity">Name</label>
        <input type="number" class="form-control" id="productQuantity" aria-describedby="productQuantity" value="<%= @product['quantity'] %>">
      </div>
      <div class="form-group" style="color: white;">
        <label for="productName">Description</label>
        <input type="text" class="form-control" id="productDescription" aria-describedby="productDescription" value="<%= @product['description'] %>">
      </div>
      <button type="submit" class="btn btn-info">Update</button>
    <% end %>
  
  </div>
</div>